<Page
    x:Class="Client.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HomeHub.Client"
    xmlns:localVM="using:HomeHub.Client.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <Page.Resources>
        <ResourceDictionary>
            <local:VisibilityConverter x:Key="VisibilityConverter" />
            <local:TemperatureToStringConverter x:Key="TemperatureConverter" />
            <local:TimeSpanToStringConverter x:Key="TimeConverter" />
        </ResourceDictionary>
    </Page.Resources>
    
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">        
        <Pivot Margin="0,20,0,0">
            <PivotItem>
                <PivotItem.Header>
                    <SymbolIcon Symbol="Home" />
                </PivotItem.Header>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock x:Name="CurrentAverageTemperatureLabel" FontSize="80" Text="{x:Bind Thermostat.CurrentTemperature, Mode=OneWay, Converter={StaticResource TemperatureConverter}}" />
                        <TextBlock FontSize="80" Text="{x:Bind Thermostat.CurrentTemperatureUnit, Mode=OneWay}" />
                    </StackPanel>
                    <Button Content="Override" Tapped="OverrideButton_Tapped" />
                </StackPanel>
            </PivotItem>
            <PivotItem>
                <PivotItem.Header>
                    <SymbolIcon Symbol="AllApps" />
                </PivotItem.Header>
                <StackPanel>
                    <TextBlock Margin="10" Text="Rules" FontSize="30" />
                    <AppBarButton Icon="Add" Content="Add Rule" Margin="5" x:Name="AddRuleButton" Tapped="AddRuleButton_Tapped" />
                    <ListView x:Name="RuleListView" ItemsSource="{x:Bind Thermostat.Rules, Mode=TwoWay}">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="localVM:RuleViewModel">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.ColumnSpan="3" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{x:Bind StartTime, Mode=OneWay, Converter={StaticResource TimeConverter}}" />
                                    <SymbolIcon Margin="10" Grid.Column="0" Grid.Row="1" Symbol="{x:Bind RuleSymbol, Mode=OneWay}" />
                                    <TextBlock Margin="20,10,20,10" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" TextAlignment="Center">
                                        <Run Text="{x:Bind LowTemperature, Mode=OneWay, Converter={StaticResource TemperatureConverter}}" />
                                        <Run Text="{x:Bind CurrentTemperatureUnit, Mode=OneWay}" />
                                        <Run Text="  -  " />
                                        <Run Text="{x:Bind HighTemperature, Mode=OneWay, Converter={StaticResource TemperatureConverter}}" />
                                        <Run Text="{x:Bind CurrentTemperatureUnit, Mode=OneWay}" />
                                    </TextBlock>
                                    <SymbolIcon Margin="10" Grid.Column="2" Grid.Row="1" Symbol="Delete" Tapped="{x:Bind Delete}" />
                                    <TextBlock Grid.ColumnSpan="3" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{x:Bind EndTime, Mode=OneWay, Converter={StaticResource TimeConverter}}" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </PivotItem>
            <PivotItem>
                <PivotItem.Header>
                    <SymbolIcon Symbol="AttachCamera" />
                </PivotItem.Header>
                <StackPanel>
                    <Button Content="StartBlockingProgress" Tapped="StartBlockingProgress_Tapped" />
                    <Button Content="StartNonBlockingProgress" Tapped="StartNonBlockingProgress_Tapped" />
                </StackPanel>
            </PivotItem>
            <PivotItem>
                <PivotItem.Header>
                    <SymbolIcon Symbol="Setting" />
                </PivotItem.Header>
                <ScrollViewer>
                    <StackPanel>
                        <Grid DataContext="{x:Bind HubSettings}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock Grid.ColumnSpan="2" Grid.Row="0" Margin="10" Text="Hub Settings" FontSize="30" />
                            <TextBlock Grid.Column="0" Grid.Row="1" Margin="10" Text="Polling Interval:" />
                            <TextBox Grid.Column="1" Grid.Row="1" Margin="10" Text="{Binding PollingTime, Mode=TwoWay}" LostFocus="PollingTime_LostFocus" />
                            <TextBlock Grid.Column="0" Grid.Row="2" Margin="10" Text="Target Buffer Time:" />
                            <TextBox Grid.Column="1" Grid.Row="2" Margin="10" Text="{Binding TargetBufferTime, Mode=TwoWay}" />
                            <TextBlock Grid.Column="0" Grid.Row="3" Margin="10" Text="Use Rules:" />
                            <CheckBox Grid.Column="1" Grid.Row="3" Margin="10" IsChecked="{Binding UseRules, Mode=TwoWay}" />
                        </Grid>
                        <Grid DataContext="{x:Bind ClientSettings}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock Grid.ColumnSpan="2" Grid.Row="0" Margin="10" Text="App Settings" FontSize="30" />
                            <TextBlock Grid.Column="0" Grid.Row="1" Margin="10" Text="Temperature Format:" />
                            <ComboBox Grid.Column="1" Grid.Row="1" Margin="10" x:Name="TemperatureFormatSelector" ItemsSource="{Binding PossibleTemperatureFormats}" SelectedIndex="{Binding SelectedIndex, Mode=TwoWay}" />
                            <TextBlock Grid.Column="0" Grid.Row="2" Margin="10" Text="Refresh Interval:" />
                            <TextBox Grid.Column="1" Grid.Row="2" Margin="10" Text="{Binding RefreshInterval, Mode=TwoWay}" />
                            <TextBlock Grid.Column="0" Grid.Row="3" Margin="10" Text="Hostname: " />
                            <TextBox Grid.Column="1" Grid.Row="3" Margin="10" Text="{Binding Hostname, Mode=TwoWay}" />
                            <TextBlock Grid.Column="0" Grid.Row="4" Margin="10" Text="Port: " />
                            <TextBox Grid.Column="1" Grid.Row="4" Margin="10" Text="{Binding Port, Mode=TwoWay}" InputScope="Number" />
                            <Button Grid.ColumnSpan="2" Grid.Row="5" HorizontalAlignment="Center" Content="Search for Hub" Tapped="{x:Bind ClientSettings.ProbeForHub}" />
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </PivotItem>
        </Pivot>
        <local:ProgressView IsBlockingVisible="{x:Bind Progress.IsBlockingProgress, Mode=OneWay, Converter={StaticResource VisibilityConverter}}" IsNonBlockingVisible="{x:Bind Progress.IsNonBlockingProgress, Mode=OneWay, Converter={StaticResource VisibilityConverter}}" BlockingText="{x:Bind Progress.BlockingProgressText, Mode=OneWay}" NonBlockingText="{x:Bind Progress.NonBlockingProgressText, Mode=OneWay}" ProgressRingDiameter="150" NonBlockingTextFontSize="12" BlockingTextFontSize="24" />
    </Grid>
</Page>
